set background=dark

set gfn=Courier_New:h10:cANSI
set nobackup
set nowritebackup
set noswapfile

set tabstop=4
set expandtab
set softtabstop=4
set shiftwidth=4

set ignorecase
set encoding=utf-8
set fileencoding=utf-8
set autoindent
set autochdir
set history=10000

map <F5> <ESC>:bp<CR>
map <F6> <ESC>:bn<CR>
map <F3> <ESC>:cn<CR>
map <F4> <ESC>:bd<CR>
map <S-F3> <ESC>:cp<CR>



" Stupid shift key fixes
cmap W w                        
cmap WQ wq
cmap wQ wq
cmap Q q

